{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="medium-12 large-12 columns">
            <div class="medium-2  columns"><a class="success button" href="{{ path('new_contact') }}">New Contact</a></div>

            <table class="stack">
                <thead>
                <tr>
                    <th width="200">First Name</th>
                    <th width="200">Last Name</th>
                    <th width="200">BirthDay</th>
                    <th width="200">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.firstName | capitalize }}  </td>
                        <td>{{ contact.lastName | capitalize }}  </td>
                        <td>{{ contact.birthDate | date("m/d/Y") }}</td>
                        <td>
                            <a class="button" href="{{ path('modify_contact', {'contactId': contact.id}) }}">View/Edit</a>
                            <a class="alert button" href="{{ path('remove_contact', {'contactId': contact.id}) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
